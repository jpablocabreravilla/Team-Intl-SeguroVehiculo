@page
@model TGL.WebAppTeamSeguros.Pages.Customers.AddModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Add";
}


<nav>
    <div class="nav-wrapper bg-dark">
        <a class="brand-logo center">Add Customer</a>
    </div>
</nav>

<div class="row">
    <form method="post" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <label for="name" class="">Name</label>
                <input asp-for="Customer.Name" type="text" />
            </div>
            <div class="input-field col s6">
                <label for="lastname" class="">LastName</label>
                <input asp-for="Customer.LastName" type="text" />
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="doctype" class="">Document Type</label>
                <br /><br /><br />
                <div>
                    <select class="browser-default" asp-for="Customer.TypeDoc" asp-items="Html.GetEnumSelectList<@Models.TypeDoc>()">
                        <option value="" disabled selected>Choose</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="numdoc" class="">Number Document</label>
                <input asp-for="Customer.NumDoc" type="number" />
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label>Birthdate</label>
                <br /><br /><br />
                <div>
                    <input type="date" id="dob" class="date" asp-for="Customer.Birthday" />

                </div>

            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="city" class="">City</label>
                <input asp-for="Customer.City" type="text" />
            </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">
            Save
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>
<br />
<script>
    $(function () {
        var dtToday = new Date();
        var month = dtToday.getMonth() + 1;// jan=0; feb=1 .......
        var day = dtToday.getDate();
        var year = dtToday.getFullYear() - 16;
        if (month < 10)
            month = '0' + month.toString();
        if (day < 10)
            day = '0' + day.toString();
        var minDate = year + '-' + month + '-' + day;
        var maxDate = year + '-' + month + '-' + day;
        $('#dob').attr('max', maxDate);

    });
</script>
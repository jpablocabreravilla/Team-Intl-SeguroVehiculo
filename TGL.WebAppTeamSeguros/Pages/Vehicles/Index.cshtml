@page
@model TGL.WebAppTeamSeguros.Pages.Vehicles.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}
<nav>
    <div class="nav-wrapper bg-dark">
        <a class="brand-logo center">List of Vehicles</a>
    </div>
</nav>

<br />
<br />
<a asp-page="Add" role="button" class="btn btn-success"
   asp-route-customerid="@Model.Customerid"> Add Vehicle</a>
<br />
<br />
<form method="post">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Brand               </th>
                <th scope="col">Model               </th>
                <th scope="col">Year                </th>
                <th scope="col">Acciones            </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var vehicle in Model.VehiclesByCostumerId)
            {
                <tr>
                    <td>@vehicle.Brand        </td>
                    <td>@vehicle.Model        </td>
                    <td>@vehicle.Year      </td>
                    <td>
                        <button class="btn btn-outline-danger" type="submit"
                                asp-page-handler="delete"
                                asp-route-id="@vehicle.Id">
                            Delete
                        </button>
                    </td>
                </tr>
            }

        </tbody>

    </table>
</form>
<a asp-page="../Customers/Index">Return to list</a>
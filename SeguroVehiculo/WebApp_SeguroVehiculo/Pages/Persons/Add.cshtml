@page
@model WebApp_SeguroVehiculo.Pages.Persons.AddModel
@{
}
 
<center><h1>Add Customer</h1></center>

<div class="row">
    <form method="post" class="col s12">
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Person.Name" />
                <span class="helper-text" data-error="wrong" data-success="right">Name</span>
            </div>
            <div class="input-field col s6">
                <input asp-for="Person.LastName" />
                <span class="helper-text" data-error="wrong" data-success="right">LastName</span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Person.DocType" />
                <span class="helper-text" data-error="wrong" data-success="right">DocType</span>
            </div>
            <div class="input-field col s6">
                <input asp-for="Person.DocNum" />
                <span class="helper-text" data-error="wrong" data-success="right">DocNum</span>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s6">
                <input asp-for="Person.City" />
                <span class="helper-text" data-error="wrong" data-success="right">City</span>
            </div>
            <div class="input-field col s6">
                <input asp-for="Person.BirthDate" />
                <span class="helper-text" data-error="wrong" data-success="right">BirthDate</span>
            </div>
        </div>
        <div class="row">
        </div>
        <br />
        <div class="row">
            <button class="waves-effect waves-light btn col s12 " type="submit">
                Save
            </button>
        </div>
    </form>
</div>

